{
  "manifest_version": 3,
  "name": "YouTube Playlist Watch-Time Planner",
  "version": "2.0.0",
  "description": "Plan your YouTube playlist watching schedule with day-wise breakdowns",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "http://localhost:3000/*",
    "https://*.vercel.app/*",
    "https://your-backend.example.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "assets/icon.png"
    }
  },
  "icons": {
    "128": "assets/icon.png"
  }
}
